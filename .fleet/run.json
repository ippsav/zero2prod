{
    "configurations": [
        {
            "type": "cargo",
            "name": "Generate docs",
            "cargoArgs": ["doc"],
        },

        {
            "type": "cargo",
            "name": "Run server with logs",
            "environment": {
                "RUST_LOG": "trace"
            },
            "cargoArgs": ["run"],
        },
        {
            "type": "cargo",
            "name": "Run tests with logs",
            "environment": {
                "TEST_LOG": "info",
                "ENVIRONMENT": "test"
            },
            "cargoArgs": ["test"],
        },

        {
            "type": "cargo",
            "name": "Run server",
            "cargoArgs": ["run"],
        },
        {
            "type": "cargo",
            "name": "Run cargo watch(checks,tests,run server)",
            "cargoArgs": ["watch", "-x check","-x test", "-x run"],
        },
        {
            "type": "cargo",
            "name": "Run tests",
            "cargoArgs": ["test","--", "--nocapture"],
        }
    ]
}